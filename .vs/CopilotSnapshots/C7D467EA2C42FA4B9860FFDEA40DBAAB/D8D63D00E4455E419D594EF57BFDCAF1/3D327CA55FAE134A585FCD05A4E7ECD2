# =========================================
# Production Environment Variables Template
# For Hostinger Cloud Startup Deployment
# =========================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Security (REQUIRED - generate secure random strings)
# Generate with: openssl rand -base64 32
COOKIE_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
# COOKIE_DOMAIN=.yourdomain.com  # Optional: set if using subdomains

# Database (REQUIRED)
# Format: mysql://user:password@host:port/database
DATABASE_URL=mysql://username:password@your-mysql-host:3306/your_database_name

# OAuth Configuration (REQUIRED for production login)
OAUTH_SERVER_URL=https://your-oauth-server.com
VITE_OAUTH_PORTAL_URL=https://your-oauth-server.com
VITE_APP_ID=your-app-id

# Origins (REQUIRED - must match your production domain)
# This is your frontend URL
WEB_ORIGIN=https://yourdomain.com
VITE_SERVER_ORIGIN=https://yourdomain.com

# User Management
OWNER_OPEN_ID=your-owner-openid
ALLOW_AUTO_PROVISION=false
# ALLOWED_EMAIL_DOMAIN=yourdomain.com
# ALLOWED_EMAILS=user1@example.com,user2@example.com

# Feature Flags
VITE_USE_DEV_LOGIN=false

# Optional: Forge API (if using AI features)
# FORGE_API_URL=
# FORGE_API_KEY=
